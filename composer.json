{
    "name": "etsglobal/php-static-analysis",
    "description": "Static analysis tools configuration for PHP projects",
    "type": "phpcodesniffer-standard",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "slevomat/coding-standard": "^7.0 || ^8.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5 || ^10.0",
        "phpstan/phpstan": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpmd/phpmd": "^2.11"
    },
    "autoload": {
        "psr-4": {
            "ETSGlobalCodingStandard\\": "src\\ETSGlobalCodingStandard\\"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ETSGlobalCodingStandard\\": "tests\\ETSGlobalCodingStandard\\"
        }
    },
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
